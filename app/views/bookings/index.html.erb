<h2><center>Your bookings</center></h2>
<div class="container">
  <% if @bookings.present? %>

      <% @bookings.each do |booking| %>
          <%= link_to boat_path(booking.boat) do  %>
          <div class="card-product">
            <%= link_to image_tag(booking.boat.image), booking_path(booking) %>
            <div class="card-product-infos">
              <h2> You've booked: <%= booking.boat.name %></h2>
            </div>
          </div>
          <% end %>
      <% end %>
    <% else %>
      <h3>You haven't made any bookings yet!</h3>
      <p><%= link_to "Browse boats", boats_path, :class => "btn btn-primary"%></p>
    <% end %>
</div>
