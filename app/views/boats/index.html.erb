<div class="boatbanner"><h1>Find the right boat!</h1></div>

  <div class="search-div">
    <div class="div-input">
    <%= form_tag boats_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Where do you want to sail?"
      %></div>
      <div class="div-btn"><%= submit_tag "Search", class: "btn btn-default" %></div>
    <% end %>
  </div>

<div class="container">


  <div class="row">
    <% @boats.each do |boat| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card-product">
          <%= link_to image_tag("https://media.istockphoto.com/photos/blue-striped-white-yacht-speeding-across-the-sea-picture-id162324941?k=6&m=162324941&s=612x612&w=0&h=7_RjlRsGuhb1holxGjZO_kAEfK5mMkacjapRAPZsvLU="), boat_path(boat) %>
          <div class="card-product-infos">
            <h2><%= link_to boat.name, boat_path(boat)%></h2>
            <p><%=boat.location%></p>
            <p>Â£<%=boat.price%> per day</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
