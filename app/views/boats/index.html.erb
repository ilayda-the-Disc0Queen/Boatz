<div class="boatbanner"><h1>Find the right boat!</h1></div>


<div class="container">
  <div class="row">
    <% @boats.each do |boat| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card-product">
          <%= link_to image_tag(boat.image), boat_path(boat) %>
          <div class="card-product-infos">
            <h2><%= link_to boat.name, boat_path(boat)%></h2>
            <p><%=boat.location%></p>
            <p>$<%=boat.price%> per day</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
